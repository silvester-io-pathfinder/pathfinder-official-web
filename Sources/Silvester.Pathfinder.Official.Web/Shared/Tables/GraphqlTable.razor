@using Silvester.Pathfinder.Official.Web.Pages.Overviews
@using Silvester.Pathfinder.Official.Web.Shared.Tables

@typeparam TEntity

<div>
    <MudTable T="TEntity" RowsPerPage="@RowsPerPage" Style="margin: 20px;" ServerData="@GetServerData" Dense="true" Hover="true" @ref="Table" Header>
        <ToolBarContent>
            <div style="display:flex; flex-direction: column; width: 100%;">
                <div style="display:flex; flex-direction: row; padding-left: 16px; padding-right: 16px; padding-top:10px; padding-bottom:10px">
                    <MudText Typo="Typo.h6">@Title</MudText>
                    <MudToolBarSpacer />
                </div>
                <div>
                    <MudTextField T="string" Style="background-color: white; padding: 8px;" ValueChanged="@(text => OnSearch(text))" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0" />
                </div>
            </div>
        </ToolBarContent>
        <HeaderContent>
            @Columns
            @if(IsLoading)
            {
                <div style="position: absolute; left:0; bottom: 0; transform: translateY(50%); width: 100%; z-index: 10;"><MudProgressLinear Color="Color.Primary" Indeterminate="true" /></div>
            }
        </HeaderContent>
        <RowTemplate>
            @Rows(context)
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
</div>