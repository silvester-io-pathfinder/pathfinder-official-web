@inherits LayoutComponentBase


<MudLayout>
    <MudAppBar Elevation="4">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h6">@string.Join("  -  ", AppBarState!.Value.TitleComponents)</MudText>
        <MudAppBarSpacer />
    </MudAppBar>
    <MudDrawer @bind-Open="@DrawerOpen" Elevation="4">
        <MudNavMenu>
            <MudNavLink Icon="@Generated.Trait" Href="traits" Match="NavLinkMatch.Prefix">Traits</MudNavLink>
            <MudNavGroup Title="Abilities">
                <MudNavLink Icon="@Generated.Fire" Href="spells" Match="NavLinkMatch.Prefix">Spells</MudNavLink>
                <MudNavLink Icon="@Generated.Feat" Href="feats" Match="NavLinkMatch.Prefix">Feats</MudNavLink>
            </MudNavGroup>
            <MudNavGroup Title="Magic">
                <MudNavLink Icon="@Generated.MagicSchool" Href="magic-schools" Match="NavLinkMatch.Prefix">Schools</MudNavLink>
                <MudNavLink Icon="@Generated.MagicTradition" Href="magic-traditions" Match="NavLinkMatch.Prefix">Traditions</MudNavLink>
                <MudNavLink Icon="@Generated.MagicComponent" Href="magic-components" Match="NavLinkMatch.Prefix">Components</MudNavLink>
                <MudNavLink Icon="@Generated.MagicEssence" Href="magic-essences" Match="NavLinkMatch.Prefix">Essences</MudNavLink>
            </MudNavGroup>
            <MudNavGroup Title="Character">
                <MudNavLink Icon="@Generated.Classes" Href="classes" Match="NavLinkMatch.Prefix">Classes</MudNavLink>
                <MudNavLink Icon="@Generated.Stats" Href="stats" Match="NavLinkMatch.Prefix">Stats</MudNavLink>
                <MudNavLink Icon="@Generated.Race" Href="races" Match="NavLinkMatch.Prefix">Races</MudNavLink>
                <MudNavLink Icon="@Generated.Size" Href="sizes" Match="NavLinkMatch.Prefix">Sizes</MudNavLink>
                <MudNavLink Icon="@Generated.Traits" Href="race-traits" Match="NavLinkMatch.Prefix">Traits</MudNavLink>
            </MudNavGroup>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
