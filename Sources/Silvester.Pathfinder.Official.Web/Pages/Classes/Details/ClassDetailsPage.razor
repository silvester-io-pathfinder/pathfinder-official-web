@using Silvester.Pathfinder.Official.Web.Shared.Layout;
@using Silvester.Pathfinder.Official.Web.Pages.Classes.Details.Components;

@inherits BaseDetailPage
@page "/classes/{classId:guid}"
@implements IDisposable

<div>
    <PageLayout>
        @if (Class != null)
        {
            <MudPaper Style="margin: 20px">
                <DetailsCard Class="@Class" />
            </MudPaper>
        }
    </PageLayout>
</div>

@code {
    protected override string Title => "Classes";
    protected override string? Subtitle => Class?.Name;

    [Parameter]
    public Guid ClassId { get; set; }

    [Inject]
    public PathfinderOfficialApi PathfinderOfficialApi { get; set; } = default!;

    private IGetClassById_Classes_Items? Class { get; set; }

    private IDisposable? StoreSession { get; set; }

    protected override void OnInitialized()
    {
        StoreSession = PathfinderOfficialApi.GetClassById
            .Watch(ClassId)
            .Select(e => e.Data?.Classes?.Items?.FirstOrDefault())
            .Subscribe(@class =>
            {
                Class = @class;
                StateHasChanged();
            });
    }

    public void Dispose()
    {
        StoreSession?.Dispose();
    }
}