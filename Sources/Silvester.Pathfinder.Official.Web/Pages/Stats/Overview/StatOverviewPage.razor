@using Silvester.Pathfinder.Official.Web.Shared.Layout;
@using Silvester.Pathfinder.Official.Web.Pages.Stats.Overview.Components;
 
@page "/stats"
@inherits BaseOverviewPage

<div>
    <PageLayout>

        @if(Stats != null)
        {
            foreach(IStatsPage component in Stats)
            {
                <MudPaper Style="margin: 20px;">
                    <StatCard Stat="@component" />
                </MudPaper>
            }
        }

    </PageLayout>

</div>


@code {
    protected override string Title => "Stats";

    [Inject]
    public PathfinderOfficialApi PathfinderOfficialApi { get; set; } = default!;

    private IReadOnlyList<IStatsPage> Stats { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        IOperationResult<IGetStatsResult> result = await PathfinderOfficialApi.GetStats
            .ExecuteAsync();

        Stats = result.Data!.Stats!.Items!;
    }
}