@using Silvester.Pathfinder.Official.Web.Shared.Layout;
@using Silvester.Pathfinder.Official.Web.Components.Cards;

@inherits BaseDetailPage
@page "/alchemical-tools/{alchemicalToolId:guid}"
@implements IDisposable

<div>
    <PageLayout>
        @if (Tool != null)
        {
            <MudPaper Style="margin: 20px">
                <AlchemicalToolDetailsCard AlchemicalTool="@Tool" />
            </MudPaper>

            <AlchemicalToolPotenciesCard AlchemicalTool="@Tool" />
        }
    </PageLayout>
</div>

@code {
    protected override string Title => "Alchemical Tools";
    protected override string? Subtitle => Tool?.Name;

    [Parameter]
    public Guid AlchemicalToolId { get; set; }

    private IAlchemicalToolById? Tool { get; set; }

    private IDisposable? StoreSession { get; set; }

    protected override void OnInitialized()
    {
        StoreSession = PathfinderOfficialApi.GetAlchemicalToolById
            .Watch(AlchemicalToolId)
            .Select(e => e.Data?.AlchemicalTools?.Items?.FirstOrDefault())
            .Subscribe(tool =>
            {
                Tool = tool;
                StateHasChanged();
            });
    }

    public void Dispose()
    {
        StoreSession?.Dispose();
    }
}