@using Silvester.Pathfinder.Official.Web.Shared.Layout;
@using Silvester.Pathfinder.Official.Web.Components.Cards;

@inherits BaseDetailPage
@page "/spells/{spellId:guid}"
@implements IDisposable

<div>
    <PageLayout>
        @if (Spell != null)
        {
            <MudPaper Style="margin: 20px">
                <SpellDetailsCard Spell="@Spell" />
            </MudPaper>

            <MudPaper Style="margin: 20px; margin-top: 40px;">
                <SpellHeighteningsCard Spell="@Spell" />
            </MudPaper>
        }
    </PageLayout>
</div>

@code {
    protected override string Title => "Spells";
    protected override string? Subtitle => Spell?.Name;

    [Parameter]
    public Guid SpellId { get; set; }

    private IGetSpellById_Spells_Items? Spell{ get; set; }

    private IDisposable? StoreSession { get; set; }

    protected override void OnInitialized()
    {
        StoreSession = PathfinderOfficialApi.GetSpellById
            .Watch(SpellId, StrawberryShake.ExecutionStrategy.NetworkOnly)
            .Select(e => e.Data?.Spells?.Items?.FirstOrDefault())
            .Subscribe(spell =>
            {
                Spell = spell;
                StateHasChanged();
            });
    }

    public void Dispose()
    {
        StoreSession?.Dispose();
    }
}