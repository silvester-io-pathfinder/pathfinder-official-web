@using Silvester.Pathfinder.Official.Web.Shared.Layout;
@using Silvester.Pathfinder.Official.Web.Pages.Skills.Details.Components;

@inherits BaseDetailPage
@page "/skills/{skillId:guid}"
@implements IDisposable

<div>
    <PageLayout>
        @if (Skill != null)
        {
            <MudPaper Style="margin: 20px">
                <DetailsCard Skill="@Skill" />
            </MudPaper>
        }
    </PageLayout>
</div>

@code {
    protected override string Title => "Skill";
    protected override string? Subtitle => Skill?.Name;

    [Parameter]
    public Guid SkillId { get; set; }

    [Inject]
    public PathfinderOfficialApi PathfinderOfficialApi { get; set; } = default!;

    private IGetSkillById_Skills_Items? Skill { get; set; }

    private IDisposable? StoreSession { get; set; }

    protected override void OnInitialized()
    {
        StoreSession = PathfinderOfficialApi.GetSkillById
            .Watch(SkillId)
            .Select(e => e.Data?.Skills?.Items?.FirstOrDefault())
            .Subscribe(skill =>
            {
                Skill = skill;
                StateHasChanged();
            });
    }

    public void Dispose()
    {
        StoreSession?.Dispose();
    }
}