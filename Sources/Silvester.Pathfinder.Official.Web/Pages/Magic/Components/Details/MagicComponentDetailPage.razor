@inherits BaseDetailPage
@implements IDisposable

@page "/magic-components/{magicComponentId:guid}"

@using Silvester.Pathfinder.Official.Web.Pages.Feats.Details.Components;
@using Silvester.Pathfinder.Official.Web.Shared.Layout;
@using Silvester.Pathfinder.Official.Web.Pages.Magic.Components.Details.Components;

<div>
    <PageLayout>
        @if (MagicComponent != null)
        {
            <MudPaper Style="margin: 20px">
                <MagicComponentCard MagicComponent="@MagicComponent" />
            </MudPaper>

            <MudPaper Style="margin: 20px">
                <SpellsTable MagicComponent="@MagicComponent" />
            </MudPaper>
        }
    </PageLayout>
</div>

@code {
    protected override string Title => "Magic Schools";
    protected override string? Subtitle => MagicComponent?.Name;

    [Parameter]
    public Guid MagicComponentId { get; set; }

    [Inject]
    public PathfinderOfficialApi PathfinderOfficialApi { get; set; } = default!;

    private IMagicComponentById? MagicComponent { get; set; }

    private IDisposable? StoreSession { get; set; }

    protected override void OnInitialized()
    {
        StoreSession = PathfinderOfficialApi.GetMagicComponentById
            .Watch(MagicComponentId)
            .Select(e => e.Data?.SpellComponents?.Items?.FirstOrDefault())
            .Subscribe(magicComponent =>
            {
                MagicComponent = magicComponent;
                StateHasChanged();
            });
    }

    public void Dispose()
    {
        StoreSession?.Dispose();
    }
}