@inherits BaseDetailPage
@implements IDisposable

@page "/magic-traditions/{magicTraditionId:guid}"

@using Silvester.Pathfinder.Official.Web.Pages.Feats.Details.Components;
@using Silvester.Pathfinder.Official.Web.Shared.Layout;
@using Silvester.Pathfinder.Official.Web.Pages.Magic.Traditions.Details.Components;

<div>
    <PageLayout>
        @if (MagicTradition != null)
        {
            <MudPaper Style="margin: 20px">
                <MagicTraditionCard MagicTradition="@MagicTradition" />
            </MudPaper>

            <MudPaper Style="margin: 20px">
                <SpellsTable MagicTradition="@MagicTradition" />
            </MudPaper>
        }
    </PageLayout>
</div>

@code {
    protected override string Title => "Magic Schools";
    protected override string? Subtitle => MagicTradition?.Name;

    [Parameter]
    public Guid MagicTraditionId { get; set; }

    [Inject]
    public PathfinderOfficialApi PathfinderOfficialApi { get; set; } = default!;

    private IMagicTraditionById? MagicTradition { get; set; }

    private IDisposable? StoreSession { get; set; }

    protected override void OnInitialized()
    {
        StoreSession = PathfinderOfficialApi.GetMagicTraditionById
            .Watch(MagicTraditionId)
            .Select(e => e.Data?.MagicTraditions?.Items?.FirstOrDefault())
            .Subscribe(magicTradition =>
            {
                MagicTradition = magicTradition;
                StateHasChanged();
            });
    }

    public void Dispose()
    {
        StoreSession?.Dispose();
    }
}