@inherits BaseDetailPage
@implements IDisposable

@page "/magic-schools/{magicSchoolId:guid}"

@using Silvester.Pathfinder.Official.Web.Pages.Feats.Details.Components;
@using Silvester.Pathfinder.Official.Web.Shared.Layout;
@using Silvester.Pathfinder.Official.Web.Pages.Magic.Schools.Details.Components;

<div>
    <PageLayout>
        @if (MagicSchool != null)
        {
            <MudPaper Style="margin: 20px">
                <MagicSchoolCard MagicSchool="@MagicSchool" />
            </MudPaper>

            <MudPaper Style="margin: 20px">
                <SpellsTable MagicSchool="@MagicSchool" />
            </MudPaper>
        }
    </PageLayout>
</div>

@code {
    protected override string Title => "Magic Schools";
    protected override string? Subtitle => MagicSchool?.Name;

    [Parameter]
    public Guid MagicSchoolId { get; set; }

    [Inject]
    public PathfinderOfficialApi PathfinderOfficialApi { get; set; } = default!;

    private IMagicSchoolById? MagicSchool { get; set; }

    private IDisposable? StoreSession { get; set; }

    protected override void OnInitialized()
    {
        StoreSession = PathfinderOfficialApi.GetMagicSchoolById
            .Watch(MagicSchoolId)
            .Select(e => e.Data?.MagicSchools?.Items?.FirstOrDefault())
            .Subscribe(magicSchool =>
            {
                MagicSchool = magicSchool;
                StateHasChanged();
            });
    }

    public void Dispose()
    {
        StoreSession?.Dispose();
    }
}