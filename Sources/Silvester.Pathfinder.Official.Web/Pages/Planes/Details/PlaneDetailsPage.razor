@using Silvester.Pathfinder.Official.Web.Shared.Layout;
@using Silvester.Pathfinder.Official.Web.Pages.Planes.Details.Components;

@inherits BaseDetailPage
@page "/planes/{planeId:guid}"
@implements IDisposable

<div>
    <PageLayout>
        @if (Plane != null)
        {
            <MudPaper Style="margin: 20px">
                <PlaneDetailsCard Plane="@Plane" />
            </MudPaper>
        }
    </PageLayout>
</div>

@code {
    protected override string Title => "Planes";
    protected override string? Subtitle => Plane?.Name;

    [Parameter]
    public Guid PlaneId { get; set; }

    [Inject]
    public PathfinderOfficialApi PathfinderOfficialApi { get; set; } = default!;

    private IGetPlaneById_Planes_Items? Plane { get; set; }

    private IDisposable? StoreSession { get; set; }

    protected override void OnInitialized()
    {
        StoreSession = PathfinderOfficialApi.GetPlaneById
            .Watch(PlaneId)
            .Select(e => e.Data?.Planes?.Items?.FirstOrDefault())
            .Subscribe(plane =>
            {
                Plane = plane;
                StateHasChanged();
            });
    }

    public void Dispose()
    {
        StoreSession?.Dispose();
    }
}